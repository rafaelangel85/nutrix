#:import images_path kivymd.images_path


<AddFoodScreenView>

    MDBoxLayout:
        orientation: "vertical"

        FitImage:
            source: 'assets/images/add_food_screen.png'

        MDBoxLayout:
            orientation: "vertical"
            adaptive_height: True
            size_hint_x: None
            width: root.width
            radius: 12
            padding: "12dp"
            md_bg_color: 1, 1, 1, .5
            pos_hint: {"center_x": .5, "center_y": .5}
        ScrollView:
            MDList:
                id: available_food_list

        MDRectangleFlatButton:
            text: "Do the list"
            text_color: 0, 0, 1, 1
            md_bg_color: 1, 1, 0, 1
            on_press: root.do_the_list_view()

        MDBottomNavigation:
            panel_color: app.theme_cls.primary_color
            selected_color_background: get_color_from_hex("#97ecf8")
            text_color_active: 0, 0, 0, 1

            MDBottomNavigationItem:
                name: 'main screen'
                text: 'Home'
                icon: 'home'
                on_tab_press: root.set_screen('main screen')
            MDBottomNavigationItem:
                name: 'back_from_add_food_screen'
                text: 'Back'
                icon: 'arrow-left-bold'
                on_tab_press: root.set_screen('main screen')
