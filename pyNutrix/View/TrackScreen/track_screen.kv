#:import images_path kivymd.images_path


<TrackScreenView>

    MDBoxLayout:
        orientation: "vertical"

        FitImage:
            source: 'assets/images/track_screen.png'

        MDBoxLayout:
            orientation: "vertical"
            adaptive_height: True
            size_hint_x: None
            width: root.width
            radius: 12
            padding: "12dp"
            md_bg_color: 1, 1, 1, .5
            pos_hint: {"center_x": .5, "center_y": .5}

            MDBoxLayout:
                orientation: "vertical"
                adaptive_height: True
                padding: "12dp"
                spacing: "30dp"

            MDLabel:
                id: title_label
                text: "Today"
                font_style: "H6"
                adaptive_height: True
                halign: "center"
                spacing: "20dp"

            MDBoxLayout:
                orientation: "horizontal"
                adaptive_height: True
                padding: "30dp"
                spacing: "5dp"

                MDRectangleFlatButton:
                    text: "Breakfast"
                    text_color: 0, 0, 1, 1
                    md_bg_color: 1, 1, 0, 1
                    # on_press: root.on_press_breakfast()
                    on_press: root.set_screen('add food screen')

                MDBoxLayout:
                    orientation: "horizontal"
                    adaptive_height: True
                    padding: "30dp"
                    spacing: "5dp"

                MDRectangleFlatButton:
                    text: "Lunch"
                    text_color: 0, 0, 1, 1
                    md_bg_color: 1, 1, 0, 1

            MDBoxLayout:
                orientation: "horizontal"
                adaptive_height: True
                padding: "30dp"
                spacing: "10dp"

                MDRectangleFlatButton:
                    text: "Snack"
                    text_color: 0, 0, 1, 1
                    md_bg_color: 1, 1, 0, 1

                MDBoxLayout:
                    orientation: "horizontal"
                    adaptive_height: True
                    padding: "30dp"
                    spacing: "5dp"

                MDRectangleFlatButton:
                    text: "Dinner"
                    text_color: 0, 0, 1, 1
                    md_bg_color: 1, 1, 0, 1

        MDBottomNavigation:
            panel_color: app.theme_cls.primary_color
            selected_color_background: get_color_from_hex("#97ecf8")
            text_color_active: 0, 0, 0, 1

            MDBottomNavigationItem:
                name: 'main screen'
                text: 'Home'
                icon: 'home'
                badge_icon: "numeric-10"
                on_tab_press: root.set_screen('main screen')
