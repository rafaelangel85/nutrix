#:import images_path kivymd.images_path


<TrackScreenView>

    FitImage:
        source: f"{images_path}firebase-logo.png"

    MDBoxLayout:
        orientation: "vertical"

        MDToolbar:
            title: "TrackScreen"
            left_action_items: [["home", lambda x: root.set_screen('main screen')]]

        MDFloatLayout:

            MDBoxLayout:
                orientation: "vertical"
                adaptive_height: True
                size_hint_x: None
                width: root.width - dp(72)
                radius: 12
                padding: "12dp"
                md_bg_color: 1, 1, 1, .5
                pos_hint: {"center_x": .5, "center_y": .5}

                MDLabel:
                    id: prev_label
                    text: "To log in, enter your personal data:"
                    font_style: "H6"
                    adaptive_height: True
                    halign: "center"

                MDBoxLayout:
                    orientation: "vertical"
                    adaptive_height: True
                    padding: "50dp"
                    spacing: "20dp"
